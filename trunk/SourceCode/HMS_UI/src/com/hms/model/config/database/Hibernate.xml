<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
 
	<!-- Hibernate session factory -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
 
	    <property name="dataSource">
	      <ref bean="dataSource"/>
	    </property>
 
	    <property name="hibernateProperties">
	       <props>
	         <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
	         <prop key="hibernate.show_sql">true</prop>
	       </props>
	    </property>
 
     	<property name="mappingResources">
			<list>
		    	<value>/com/hms/model/entity/User.hbm.xml</value>
		    	<value>/com/hms/model/entity/Service.hbm.xml</value>
		    	<value>/com/hms/model/entity/Department.hbm.xml</value>
		    	<value>/com/hms/model/entity/V_Material.hbm.xml</value>
		    	<value>/com/hms/model/entity/Patient.hbm.xml</value>
		    	<value>/com/hms/model/entity/MedicineGroup.hbm.xml</value>
		    	<value>/com/hms/model/entity/Medicine.hbm.xml</value>
		    	<value>/com/hms/model/entity/Doctor.hbm.xml</value>
		    	<value>/com/hms/model/entity/BasicMedicalRecord.hbm.xml</value>
		    	<value>/com/hms/model/entity/MedicalRecord.hbm.xml</value>
			</list>
      	</property>	
 
    </bean>
    
    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
  		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
</beans>